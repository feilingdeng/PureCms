@model PureCms.Web.Models.SignInModel
@{
    Layout = null;
    ViewBag.Title = "SignIn";
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="/content/css/bootstrap3.3.5/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/content/css/dashboard.css" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="/content/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="/content/js/ie-emulation-modes-warning.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="/content/js/html5shiv.min.js"></script>
      <script src="/content/js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="bg-info">
    <div class="container">

        <form class="form-horizontal" action="/account/signin" method="post">            
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x=>x.ReturnUrl)
            <h2 class="form-signin-heading">登录</h2>
            <div class="form-group">
                <label for="loginname" class="sr-only">帐号</label>
                <input type="text" name="loginname" class="form-control" placeholder="帐号" required autofocus>
                @Html.ValidationMessageFor(x => x.LoginName)
            </div>
            <div class="form-group">
                <label for="password" class="sr-only">密码</label>
                <input type="password" name="password" class="form-control" placeholder="密码" required>
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="form-group">
                <label for="validcode" class="sr-only">验证码</label>
                <input type="text" name="validcode" class="form-control" placeholder="验证码" required>
                <span class="input-group-addon">
                    aaa
                </span>
                @Html.ValidationMessageFor(x => x.ValidCode)
            </div>
            <div class="form-group">
                <label>
                    <input type="checkbox" value="1">记住我
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>
            </div>
        </form>

    </div> <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/content/js/jquery.min.js"></script>
    <script src="/content/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/content/js/ie10-viewport-bug-workaround.js"></script>
</body>
</html>