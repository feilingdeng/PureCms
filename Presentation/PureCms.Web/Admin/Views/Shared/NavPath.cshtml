@{
    var className = this.WorkContext.Controller;
    var methodName = this.WorkContext.Action;
    List<PureCms.Core.Domain.Security.PrivilegeInfo> result = new PureCms.Services.Security.PrivilegeService().GetTreePath(className, methodName);
}
<div class="" style="margin-left: -15px; margin-right: -15px;">
    
    <ol class="breadcrumb">
        <li>&rsaquo;&rsaquo;</li>
        @foreach (var item in result)
        {
            @:<li><a href="/admin/@item.ClassName/@item.MethodName">@item.DisplayName</a></li>
        }
    </ol>
</div>