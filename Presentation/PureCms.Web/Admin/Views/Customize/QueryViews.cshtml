@model PureCms.Web.Admin.Models.QueryViewModel
@{
    ViewBag.Title = "QueryViews";
    Layout = "../Shared/_CustomizeLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <strong>视图</strong>
            <div class="pull-right">
                <a class="btn btn-info btn-sm" data-toggle="collapse"
                   href="#collapseOne">
                    <span class="glyphicon glyphicon-search"></span> 查询
                </a>
                <a class="btn btn-info btn-sm" href="createqueryview?entityid=@Model.EntityId"><span class="glyphicon glyphicon-file"></span> 新增</a>
            </div>
        </div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
        <!--in-->
        <div class="panel-body">
            @using (Html.BeginForm("QueryViews", "customize", FormMethod.Get, new { @class = "form-horizontal", @role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                @Html.Hidden("page", 1)
                @Html.Hidden("pagesize", 10)
                @Html.HiddenFor(x => x.EntityId)
                <div class="form-group col-sm-6">
                    <label class="col-sm-3 control-label" for="Name">名称</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-search"></span> 查询</button>
                </div>
            }
        </div>
    </div>
    <div class="table-responsive" id="gridview">
        <table class="table table-hover table-condensed" id="datatable" data-ajax="true" data-ajaxcontainer="gridview" data-ajaxcallback="ajaxgrid_reset()" data-sortby="@Model.SortBy.ToLower()" data-sortdirection="@Model.SortDirection">
            <thead>
                <tr>
                    <th width="2%"><input type="checkbox" name="checkall" /></th>
                    <th data-name="name">
                        @Html.ActionLink("名称", "queryviews", new { name = Model.Name, entityid = Model.EntityId, sortby = "Name", sortdirection = Model.SortDirection == 1 ? 0 : 1 })
                    </th>
                    <th width="20%" data-name="LocalizedName">
                        @Html.ActionLink("默认", "queryviews", new { name = Model.IsDefault, entityid = Model.EntityId, sortby = "IsDefault", sortdirection = Model.SortDirection == 1 ? 0 : 1 })
                    </th>
                    <th width="10%" data-name="IsRequired">
                        @Html.ActionLink("类型", "queryviews", new { name = Model.IsPrivate, entityid = Model.EntityId, sortby = "IsPrivate", sortdirection = Model.SortDirection == 1 ? 0 : 1 })
                    </th>
                    <th width="20%" data-name="IsLoged">
                        @Html.ActionLink("状态", "queryviews", new { name = Model.IsDisabled, entityid = Model.EntityId, sortby = "IsDisabled", sortdirection = Model.SortDirection == 1 ? 0 : 1 })
                    </th>
                    <th width="15%" data-name="createdon">
                        @Html.ActionLink("创建时间", "queryviews", new { name = Model.Name, entityid = Model.EntityId, sortby = "createdon", sortdirection = Model.SortDirection == 1 ? 0 : 1 })
                    </th>
                    <th width="15%">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td><input type="checkbox" value="@item.QueryViewId" name="recordid" /></td>
                        <td>@item.Name</td>
                        <td>@(item.IsDefault ? "<span class=\"label label-info\">是</span>" : "<span class=\"label label-default\">否</span>")</td>
                        <td>@(item.IsPrivate ? "<span class=\"label label-info\">个人</span>" : "<span class=\"label label-default\">公共</span>")</td>
                        <td>@(item.IsDisabled ? "<span class=\"label label-info\">启用</span>" : "<span class=\"label label-default\">禁用</span>")</td>
                        <td>@item.CreatedOn</td>
                        <td>
                            <a class="btn btn-default btn-sm" href="/admin/customize/editqueryview?id=@item.QueryViewId"><span class="glyphicon glyphicon-edit"></span> 编辑</a>
                            <a class="btn btn-warning btn-sm" href="javascript:purecms.del('@item.QueryViewId','/admin/customize/deletequeryview')"><span class="glyphicon glyphicon-trash"></span> 删除</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7" class="active">
                        <button type="button" class="btn btn-sm btn-primary" data-submit="/admin/customize/deleteattribute" data-role="delete" data-tooltip="字段删除后相关数据也将一并删除，请提前备份数据"><span class="glyphicon glyphicon-trash"></span> 批量删除</button>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="panel-footer">
        @Html.WebPager(Model.PagedModel, true)
    </div>
</div>

@section Header {
    <link href="/admin/content/bootstrap-datepicker-1.5.0/css/bootstrap-datepicker3.min.css" rel="stylesheet">
}
@section Scripts {
    <script src="/admin/content/js/jquery.form.js"></script>
    <script src="/admin/content/bootstrap-datepicker-1.5.0/js/bootstrap-datepicker.min.js"></script>
    <script src="/admin/content/bootstrap-datepicker-1.5.0/locales/bootstrap-datepicker.zh-CN.min.js" charset="UTF-8"></script>
    <script>
        $(function () {
            $('.datepicker').datepicker({
                autoclose: true
                , clearBtn: true
                , format: "yyyy-mm-dd"
                , language: "zh-CN"
            });
            ajaxgrid_reset();
            $('#searchForm').ajaxSearch('#gridview');
        });
        function ajaxgrid_reset() {
            purecms.datatable($("#datatable"));
            $("#datatable").ajaxTable();
            $("#datatable > thead th a").attr('data-ajax', 'true');
            $("#gridview .pagination a:not(.disabled)").attr('data-ajax', 'true');
        }
    </script>
}