@model PureCms.Web.Admin.Models.LogModel
@{
    ViewBag.Title = "Log";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <strong>日志</strong>
            <div class="pull-right">
                <a class="btn btn-info btn-sm" data-toggle="collapse"
                   href="#collapseOne">
                    <span class="glyphicon glyphicon-search"></span> 查询
                </a>
            </div>
        </div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
        <!--in-->
        <div class="panel-body">
            @using (Html.BeginForm("log", "platform", FormMethod.Get, new { @class = "form-horizontal", @role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                @Html.Hidden("page", 1)
                @Html.Hidden("pagesize", 10)
                <div class="form-group col-sm-6">
                    <label class="col-sm-3 control-label" for="begintime">开始时间</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.BeginTime, new { @class = "form-control datepicker" })
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label class="col-sm-3 control-label" for="endtime">结束时间</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.EndTime, new { @class = "form-control datepicker" })
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label class="col-sm-3 control-label" for="clientip">客户端IP</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.ClientIp, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <label class="col-sm-3 control-label" for="url">链接</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-search"></span> 查询</button>
                </div>
            }
        </div>
    </div>
