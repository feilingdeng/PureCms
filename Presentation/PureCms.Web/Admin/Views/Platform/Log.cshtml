        <table class="table table-hover table-condensed" id="datatable" data-ajax="true" data-ajaxcontainer="gridview" data-ajaxcallback="ajaxgrid_reset()" data-sortby="@Model.SortBy.ToLower()" data-sortdirection="@Model.SortDirection">
            <thead>
                <tr>
                    <th width="2%"><input type="checkbox" name="checkall" /></th>
                    <th data-name="title">
                        @Html.ActionLink("标题", "log", new { url = Model.Url, clientip = Model.ClientIp, begintime = Model.BeginTime, endtime = Model.EndTime, sortby = "title", sortdirection = Model.SortDirection == 1 ? 0 : 1 }, new { @data_ajax="true"})
                    </th>
                    <th width="10%">用户名</th>
                    <th width="10%" data-name="clientip">
                        @Html.ActionLink("客户端IP", "log", new { url = Model.Url, clientip = Model.ClientIp, begintime = Model.BeginTime, endtime = Model.EndTime, sortby = "clientip", sortdirection = Model.SortDirection == 1 ? 0 : 1 }, new { @data_ajax = "true" })
                    </th>
                    <th width="20%" data-name="url">
                        @Html.ActionLink("Url", "log", new { url = Model.Url, clientip = Model.ClientIp, begintime = Model.BeginTime, endtime = Model.EndTime, sortby = "url", sortdirection = Model.SortDirection == 1 ? 0 : 1 }, new { @data_ajax = "true" })
                    </th>
                    <th width="15%" data-name="createdon">
                        @Html.ActionLink("时间", "log", new { url = Model.Url, clientip = Model.ClientIp, begintime = Model.BeginTime, endtime = Model.EndTime, sortby = "createdon", sortdirection = Model.SortDirection == 1 ? 0 : 1 }, new { @data_ajax = "true" })
                    </th>
                    <th width="10%">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td><input type="checkbox" value="@item.LogId" name="recordid" /></td>
                        <td>@item.Title</td>
                        <td>@item.UserName</td>
                        <td>@item.ClientIP</td>
                        <td>@item.Url</td>
                        <td>@item.CreatedOn</td>
                        <td>
                            <a class="btn btn-warning btn-xs" href="javascript:purecms.del('@item.LogId','/admin/platform/deletelog')"><span class="glyphicon glyphicon-trash"></span> 删除</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7" class="active">
                        <button type="button" class="btn btn-sm btn-primary" data-submit="/admin/platform/deletelog" data-role="delete"><span class="glyphicon glyphicon-trash"></span> 批量删除</button>
                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="panel-footer">
            @Html.WebPager(Model.PagedModel, true)
            </div>
    </div>
    <div class="panel-footer hide">
        @**@
    </div>
</div>


@section Header {
    <link href="/admin/content/bootstrap-datepicker-1.5.0/css/bootstrap-datepicker3.min.css" rel="stylesheet">
}
@section Scripts {
    <script src="/admin/content/bootstrap-datepicker-1.5.0/js/bootstrap-datepicker.min.js"></script>
    <script src="/admin/content/bootstrap-datepicker-1.5.0/locales/bootstrap-datepicker.zh-CN.min.js" charset="UTF-8"></script>
    <script>
        $(function () {
            $('.datepicker').datepicker({
                autoclose: true
                , clearBtn: true
                , format: "yyyy-mm-dd"
                , language: "zh-CN"
            });
            ajaxgrid_reset();
        });
        function ajaxgrid_reset() {
            purecms.datatable($("#datatable"));
            $("#gridview .pagination a:not(.disabled)").attr('data-ajax', 'true');
        }
    </script>
}
